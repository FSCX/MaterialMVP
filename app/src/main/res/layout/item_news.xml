<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/car_margin"
    android:layout_marginBottom="@dimen/car_margin"
    android:layout_marginRight="@dimen/car_margin"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/item_news_padding">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="@dimen/item_news_img_width"
            android:layout_height="@dimen/item_news_img_height"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/item_news_margin_left">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_news_content_margin_top"
                android:textColor="@color/secondary_text"
                android:maxLines="2"
                android:textSize="@dimen/text_12sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
