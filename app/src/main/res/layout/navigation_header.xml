<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/CircleImageView"
        android:layout_height="@dimen/CircleImageView"
        android:layout_marginTop="@dimen/margin_Top"
        android:src="@mipmap/ic_launcher"
        />
    <!--app:border_color="@color/primary_light"
        app:border_width="@dimen/margin_Top"-->
    <TextView
        android:layout_marginTop="@dimen/author_margin_Top"
        android:id="@+id/tv_author"
        android:textSize="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/author"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</LinearLayout>
